<application>
    <name>Closest object segmenter</name>

    <dependencies>
    </dependencies>

    <module>
        <name>SFM</name>
        <node>localhost</node>
    </module>    	
    <module>
        <name>segment_crop</name>
        <node>localhost</node>
    </module>
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /processed_disp --x 0 --y 0</parameters>
    </module>
    <module>
        <name>yarpview</name>
        <node>localhost</node>
        <parameters>--name /disp_map --x 300 --y 0</parameters>
    </module>
	
		
			


    <connection>
        <from>/SFM/disp:o</from>
        <to>/segment_crop/disparity:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/segment_crop/debugRGB:o</from>
        <to>/processed_disp</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/SFM/disp:o</from>
        <to>/disp_map</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/segment_crop/rpcSFM</from>
        <to>/SFM/rpc</to>
        <protocol>tcp</protocol>
    </connection>
</application>
